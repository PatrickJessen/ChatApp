<Page x:Class="ChatApp.Chat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatApp"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Chat">

    <Grid Background="#FF343333">
        <ListBox Name="listbox" Margin="176,109,182,103" Background="#FF7E7E7E" BorderBrush="#FF95AFFF" Foreground="#FFFDFDFD" DataContextChanged="listbox_DataContextChanged">
            
        </ListBox>

        <TextBox x:Name="textMessage" Margin="176,623,182,31" Background="#FF7E7E7E"></TextBox>
        <Button Margin="1037,634,97,37" Click="SendMessage">Send</Button>
    </Grid>
</Page>
